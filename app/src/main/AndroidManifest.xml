<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.utsman.geolib.sample">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CoroutinePlacesHelper">
        <activity 
                  android:exported="true"
                  android:name="com.utsman.geolib.sample.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.utsman.geolib.sample.SearchActivity"/>
        <activity android:name="com.utsman.geolib.sample.PolylineActivity"/>
        <activity android:name="com.utsman.geolib.sample.CurrentLocationActivity"/>
        <activity android:name="com.utsman.geolib.sample.RouteActivity"/>
        <activity android:name="com.utsman.geolib.sample.DrawModePolyline"/>
        <activity android:name="com.utsman.geolib.sample.MarkerBitmapActivity"/>
        <activity android:name="com.utsman.geolib.sample.MarkerViewActivity"/>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAN6Cswfid11lHp-JPm-lorg6PtyttQZkU" />
    </application>

</manifest>
